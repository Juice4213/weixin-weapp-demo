<view class="container">
  <view class="userinfo">
     <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
     <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>

<view class="button-view">
  <button class="button" bindtap="pushToCityPicker">省市区三级联动</button>
  <button class="button" bindtap="pushToChooseImage">选择图片</button>
  <button class="button" bindtap="pushToCalendar">日历</button>
  <button class="button" bindtap="pushToSwiperDel">左划删除</button>
</view>


</view>
