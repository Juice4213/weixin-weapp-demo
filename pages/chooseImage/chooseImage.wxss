/* index.wxss */

.img {
  width: 200rpx;
  height: 200rpx;
}

.image-view {
  background: cyan;
  display: flex;
  flex-wrap: wrap;
}

.image-item-view {
  background: lightgray;
  position: relative;
}

.image-item-view .index {
  font-size: 24rpx;
  position: absolute;
  left: 5rpx;
  bottom: 5rpx;
}

.del-text {
  font-size: 24rpx;
  position: absolute;
  right: 5rpx;
  top: 5rpx;
}

.preview-text{
  font-size: 24rpx;
  position: absolute;
  right: 0;
  left:0;
  bottom:0;
  top: 0;
  margin: auto;
  width: 130rpx;
  height: 50rpx;
}

.item-view {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: 20rpx 0;
}